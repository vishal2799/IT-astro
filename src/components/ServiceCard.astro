---
import { Icon } from 'astro-icon/components';

const { title, description, icon, link } = Astro.props;
---

<div
  class='bg-white rounded-lg shadow-md p-6 transition-all duration-300 hover:shadow-xl'
>
  <div class='flex items-center mb-4'>
    <div class='bg-primary/10 p-3 rounded-full mr-4'>
      <Icon name={icon} class='w-6 h-6 text-primary' />
    </div>
    <h3 class='text-xl font-semibold text-gray-900'>{title}</h3>
  </div>
  <p class='text-gray-600 mb-4'>{description}</p>
  <a
    href={link}
    class='text-primary font-semibold hover:text-primary-dark transition-colors duration-300 flex items-center'
  >
    Learn More
    <svg
      xmlns='http://www.w3.org/2000/svg'
      class='h-5 w-5 ml-2'
      fill='none'
      viewBox='0 0 24 24'
      stroke='currentColor'
    >
      <path
        stroke-linecap='round'
        stroke-linejoin='round'
        stroke-width='2'
        d='M9 5l7 7-7 7'></path>
    </svg>
  </a>
</div>
