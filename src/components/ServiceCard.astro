---
import { Icon } from 'astro-icon/components';

const { service, home } = Astro.props;
---

<div
  class='border border-primary p-6 group bg-background hover:bg-primary hover:border-none transition-colors duration-1000 ease-in-out rounded-lg shadow-md'
>
  <div class='flex justify-between items-center mb-5'>
    <div class='flex items-center justify-center p-5 bg-highlight rounded-full'>
      <Icon size={28} name={service.icon} class='text-primary' />
    </div>
    <div
      class='text-textPrimary text-2xl font-semibold group-hover:text-highlight'
    >
      0{service.id}
    </div>
  </div>
  <a
    href=''
    class="inline-block mb-3 text-textPrimary text-2xl font-bold relative group-hover:text-highlight after:content-[''] after:absolute after:bottom-0 after:left-0 after:w-0 after:h-[2px] after:bg-highlight after:transition-all after:duration-1000 group-hover:after:w-full"
  >
    {service.name}
  </a>
  <p
    class='text-textPrimary text-lg leading-relaxed group-hover:text-highlight'
  >
    {home ? service.shortdesc : service.description}
  </p>
</div>
