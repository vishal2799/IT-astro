        >
        <a
          href='/contact-us'
          class='text-sm font-medium text-black-200 hover:text-primary transition-colors duration-300 flex items-center'
          >Contact Us</a
        >
        <a
          href='/'
          class='text-sm font-medium text-black-200 hover:text-primary transition-colors duration-300 flex items-center'
          >Blog</a
        >
        <a
          href='/'
          class='text-xl font-medium text-textPrimary hover:text-primary transition-colors duration-300 flex items-center'
          ><Icon name='facebook' /></a
        >
        <a
          href='/'
          class='text-xl font-medium text-textPrimary hover:text-primary transition-colors duration-300 flex items-center'
          ><Icon name='instagram' /></a
        >
        <a
          href='/'
          class='text-xl font-medium text-textPrimary hover:text-primary transition-colors duration-300 flex items-center'
          ><Icon name='twitter-x' /></a
        >
      </nav>
    </div>
    <div class='flex items-center justify-between py-4'>
      <a href='/' class='flex items-center space-x-2 group'>
        <!-- <Image
          src='/placeholder.svg'
          alt='Indian Wanderlust'
          width={40}
          height={40}
          class='w-10 h-10 transition-transform duration-300 group-hover:scale-110'
        /> -->
        <span
          class='text-xl font-bold text-primary transition-colors duration-300 group-hover:text-secondary'
          >Alicorn Solutions</span
        >
      </a>

      <nav class='hidden lg:flex items-center space-x-6'>
        {
          navItems.map((item) => (
            <div class='relative group'>
              <a
                href={item.href}
                class='text-sm font-medium text-black-200 hover:text-primary transition-colors duration-300 flex items-center'
              >
                {item.label}
                {item.megaMenu && (
                  <Icon
                    name='chevron-down'
                    class='inline-block w-4 h-4 ml-1 transition-transform duration-300 group-hover:rotate-180'
                  />
                )}
              </a>
              {item.megaMenu && (
                <div class='fixed left-0 w-full flex justify-center mt-2 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 z-50'>
                  <div class='w-[80vw] max-w-7xl bg-white rounded-md shadow-lg ring-1 ring-black ring-opacity-5'>
                    <div>
                      <div class='flex gap-6'>
                        {/* First Column - Categories */}
                        <div class='border-r border-slate-300 max-h-[75vh] overflow-y-auto w-3/12'>
                          <ul>
                            {item.megaMenu.column1.map((subItem) => (
                              <li class='group hover:bg-primary-100'>
                                <a
                                  href={subItem.href}
                                  class='block p-5 text-primary hover:text-gray-900 transition-colors duration-200'
                                >
                                  {subItem.label}
                                </a>
                              </li>
                            ))}
                          </ul>
                        </div>

                        {/* Second Column - Featured Content */}
                        <div class='max-h-[75vh] overflow-y-auto w-9/12 p-5'>
                          <div class='grid grid-cols-3 gap-5'>
                            {item.megaMenu.column2.map((subItem: any) => (
                              <div class='bg-white shadow-lg p-5 group'>
                                <div class='flex justify-center items-center overflow-hidden h-[100px] bg-primary-100 rounded-sm mb-4'>
                                  {/* <Image
                                    src='/uipath.png'
                                    alt={subItem.label}
                                    width={100}
                                    height={100}
                                    class='object-contain'
                                  /> */}
                                  <img
                                    src='/uipath.png'
                                    alt={subItem.label}
                                    class='object-contain'
                                  />
                                </div>
                                <div class='mb-4'>
                                  <a
                                    href={subItem.href}
                                    class='inline-block mb-2 text-primary text-xl font-bold hover:text-secondary transition-colors'
                                  >
                                    {subItem.label}
                                  </a>
                                  <p class='text-black-300 text-base leading-relaxed'>
                                    {subItem.desc}
                                  </p>
                                </div>
                                <a
                                  href={subItem.href}
                                  class='flex items-center uppercase text-primary font-medium hover:text-secondary transition-colors'
                                  aria-label={`Learn more about ${subItem.label}`}
                                >
                                  Find Out More
                                  <Icon
                                    name='chevron-right'
                                    class='w-5 h-5 ml-2'
                                  />
                                </a>
                              </div>
                            ))}
                            <MegaMenuCTA />
                          </div>
                        </div>
