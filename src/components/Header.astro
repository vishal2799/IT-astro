---
import { Icon } from 'astro-icon/components';
---

<header class='py-4 px-6 bg-white'>
  <div class='container mx-auto'>
    <div class='flex justify-between items-center'>
      <!-- Logo Section -->
      <div class='flex flex-col'>
        <a href='/' class='inline-block'>
          <img src='/velocity-logo.svg' alt='Velocity' class='h-12' />
        </a>
        <p class='text-sm text-gray-600 mt-1'>
          automate | transform | optimise
        </p>
      </div>

      <!-- Main Navigation -->
      <nav class='hidden lg:flex items-center space-x-8'>
        <a href='/services' class='text-gray-800 hover:text-red-600 font-medium'
          >SERVICES</a
        >
        <a
          href='/technology'
          class='text-gray-800 hover:text-red-600 font-medium'>TECHNOLOGY</a
        >
        <a
          href='/solutions'
          class='text-gray-800 hover:text-red-600 font-medium'>SOLUTIONS</a
        >
        <a
          href='/case-studies'
          class='text-gray-800 hover:text-red-600 font-medium'>CASE STUDIES</a
        >
        <a href='/about-us' class='text-gray-800 hover:text-red-600 font-medium'
          >ABOUT US</a
        >
      </nav>

      <!-- Right Section -->
      <div class='hidden lg:flex items-center space-x-6'>
        <!-- Top Menu -->
        <div class='flex items-center space-x-6'>
          <a
            href='/knowledge-hub'
            class='text-sm text-gray-600 hover:text-red-600'>KNOWLEDGE HUB</a
          >
          <a href='/careers' class='text-sm text-gray-600 hover:text-red-600'
            >CAREERS</a
          >
          <a href='/contact' class='text-sm text-gray-600 hover:text-red-600'
            >CONTACT</a
          >
          <button aria-label='Search' class='text-gray-600 hover:text-red-600'>
            <Icon name='search' class='w-5 h-5' />
          </button>
        </div>

        <!-- Social Icons -->
        <div class='flex items-center space-x-4'>
          <a
            href='https://linkedin.com'
            class='text-gray-600 hover:text-red-600'
            aria-label='LinkedIn'
          >
            <Icon name='instagram' class='w-5 h-5' />
          </a>
          <a
            href='https://twitter.com'
            class='text-gray-600 hover:text-red-600'
            aria-label='Twitter'
          >
            <Icon name='twitter-x' class='w-5 h-5' />
          </a>
          <a
            href='https://facebook.com'
            class='text-gray-600 hover:text-red-600'
            aria-label='Facebook'
          >
            <Icon name='facebook' class='w-5 h-5' />
          </a>
        </div>

        <!-- Phone Button -->
        <a
          href='tel:+440190873825'
          class='bg-emerald-400 text-white px-4 py-2 rounded-full hover:bg-emerald-500 transition-colors'
        >
          <Icon name='phone' class='w-4 h-4 inline-block mr-2' />
          +44(0) 1908 738 254
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        class='lg:hidden text-gray-600 hover:text-red-600'
        aria-label='Menu'
        id='mobile-menu-button'
      >
        <Icon name='list' class='w-6 h-6' />
      </button>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div class='lg:hidden hidden' id='mobile-menu'>
    <nav class='mt-4 px-4 py-2 space-y-2'>
      <a href='/services' class='block py-2 text-gray-800 hover:text-red-600'
        >SERVICES</a
      >
      <a href='/technology' class='block py-2 text-gray-800 hover:text-red-600'
        >TECHNOLOGY</a
      >
      <a href='/solutions' class='block py-2 text-gray-800 hover:text-red-600'
        >SOLUTIONS</a
      >
      <a
        href='/case-studies'
        class='block py-2 text-gray-800 hover:text-red-600'>CASE STUDIES</a
      >
      <a href='/about-us' class='block py-2 text-gray-800 hover:text-red-600'
        >ABOUT US</a
      >
      <div class='border-t border-gray-200 my-2'></div>
      <a
        href='/knowledge-hub'
        class='block py-2 text-gray-600 hover:text-red-600'>KNOWLEDGE HUB</a
      >
      <a href='/careers' class='block py-2 text-gray-600 hover:text-red-600'
        >CAREERS</a
      >
      <a href='/contact' class='block py-2 text-gray-600 hover:text-red-600'
        >CONTACT</a
      >
    </nav>
  </div>
</header>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }
</script>
