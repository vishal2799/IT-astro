---
// Header.astro
const topNavLinks = [
  { text: "KNOWLEDGE HUB", href: "/knowledge-hub" },
  { text: "CAREERS", href: "/careers" },
  { text: "CONTACT", href: "/contact" }
];

const mainNavLinks = [
  { text: "SERVICES", href: "/services" },
  { text: "TECHNOLOGY", href: "/technology" },
  { text: "SOLUTIONS", href: "/solutions" },
  { text: "CASE STUDIES", href: "/case-studies" },
  { text: "ABOUT US", href: "/about" }
];

const partners = [
  "UiPath",
  "Mendix", 
  "Netcall",
  "Nintex",
  "K2"
];

---

<header class="w-full">
  <!-- Top Bar -->
  <div class="bg-white py-2 px-6 flex justify-between items-center">
    <a href="/" class="flex items-center gap-2">
      <img src="/placeholder.svg" alt="Velocity" class="h-12" />
      <span class="text-gray-600 text-sm">automate | transform | optimise</span>
    </a>
    
    <div class="flex items-center gap-8">
      <nav class="hidden md:flex gap-6">
        {topNavLinks.map(link => (
          <a href={link.href} class="text-gray-700 hover:text-gray-900">
            {link.text}
          </a>
        ))}
      </nav>
      
      <div class="flex gap-4">
        <a href="https://linkedin.com" class="text-gray-600 hover:text-gray-900">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
          </svg>
        </a>
        <a href="https://twitter.com" class="text-gray-600 hover:text-gray-900">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/>
          </svg>
        </a>
        <a href="https://facebook.com" class="text-gray-600 hover:text-gray-900">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z"/>
          </svg>
        </a>
      </div>
    </div>
  </div>

  <!-- Main Navigation with Mega Menu -->
  <div class="bg-white shadow-sm relative">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center py-4">
        <nav class="hidden md:flex gap-8">
          {mainNavLinks.map((link, index) => (
            <div class="group relative">
              <a href={link.href} class="text-gray-700 hover:text-gray-900 font-medium">
                {link.text}
              </a>
              {index === 1 && (
                <div class="absolute left-0 mt-2 w-screen max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 hidden group-hover:block">
                  <div class="grid grid-cols-12 gap-8 bg-white shadow-lg rounded-b-lg p-8">
                    <!-- Sidebar -->
                    <div class="col-span-3">
                      <ul class="space-y-4">
                        {partners.map(partner => (
                          <li class="font-medium text-gray-700">{partner}</li>
                        ))}
                      </ul>
                    </div>

                    <!-- Main Content -->
                    <div class="col-span-9 grid grid-cols-3 gap-8">
                      <!-- UiPath Section -->
                      <div class="col-span-1">
                        <img src="/placeholder.svg" alt="UiPath" class="w-full mb-4" />
                        <h2 class="text-2xl font-bold mb-4">YOUR EXPERT RPA PARTNER</h2>
                        <p class="text-gray-600 mb-4">Team up with our RPA strategy and tech specialists for maximum automation impact</p>
                        <a href="/find-out-more" class="inline-flex items-center text-emerald-500 hover:text-emerald-600">
                          FIND OUT MORE
                          <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                          </svg>
                        </a>
                      </div>

                      <!-- Video Section -->
                      <div class="col-span-1 relative">
                        <div class="aspect-video bg-gray-200 rounded-lg relative">
                          <button class="absolute inset-0 flex items-center justify-center">
                            <svg class="w-16 h-16 text-white" fill="currentColor" viewBox="0 0 24 24">
                              <path d="M8 5v14l11-7z" />
                            </svg>
                          </button>
                        </div>
                        <h3 class="text-xl font-bold mt-4">Harness the power of UiPath in your business.</h3>
                        <a href="/watch-now" class="inline-flex items-center text-emerald-500 hover:text-emerald-600 mt-4">
                          WATCH NOW
                          <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                          </svg>
                        </a>
                      </div>

                      <!-- CTA Section -->
                      <div class="col-span-1">
                        <div class="bg-gray-100 p-6 rounded-lg">
                          <div class="flex justify-center mb-4">
                            <svg class="w-16 h-16 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                            </svg>
                          </div>
                          <p class="text-center text-gray-700 mb-6">Save money and spend more time on priority work.</p>
                          <a href="/book-consultation" class="block text-center bg-emerald-500 text-white py-2 px-4 rounded-md hover:bg-emerald-600 transition-colors">
                            BOOK CONSULTATION
                          </a>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              )}
            </div>
          ))}
        </nav>
        
        <a href="tel:+44(0)1908738254" class="bg-emerald-500 text-white px-4 py-2 rounded-md hover:bg-emerald-600 transition-colors">
          +44(0) 1908 738 254
        </a>
      </div>
    </div>
  </div>
</header>

