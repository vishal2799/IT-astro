---
const { project } = Astro.props;
---

<div class='bg-white shadow-lg rounded-lg overflow-hidden'>
  <div class='bg-lightBlue p-6'>
    <img
      src={project.image}
      class='w-full h-[300px] object-cover rounded-t-lg'
    />
  </div>
  <div class='flex justify-between items-center px-6 py-5'>
    <a
      href='/projects'
      class='inline-block text-2xl md:text-3xl text-darkBlue font-bold hover:underline'
    >
      {project.name}
    </a>
    <div
      class='bg-lightBlue text-primary font-medium border border-primary rounded-2xl px-4 py-2'
    >
      {project.category}
    </div>
  </div>
</div>
