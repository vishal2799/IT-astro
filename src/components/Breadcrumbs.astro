---
import { Image } from 'astro:assets';
const { details } = Astro.props;
---

<section class='relative h-[350px] bg-secondary text-textPrimary'>
  <Image
    src={details.img}
    alt={details.title}
    class='absolute inset-0 h-full w-full object-cover'
  />
  <div
    class='absolute inset-0 bg-gradient-to-b from-secondary/70 to-transparent'
  >
  </div>

  <div
    class='absolute inset-0 flex items-end md:items-center justify-start px-6 md:px-10 pb-8 md:pb-0'
  >
    <div class='text-left'>
      <h1 class='text-3xl md:text-5xl font-extrabold text-primary mb-3'>
        {details.title}
      </h1>
      <p class='text-lg md:text-xl text-highlight leading-relaxed'>
        {details.desc}
      </p>
    </div>
  </div>
</section>
