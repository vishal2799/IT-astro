---
import { Image } from 'astro:assets';
const { details } = Astro.props;
---

<section class='relative h-[350px] bg-secondary'>
  <Image
    src={details.img}
    alt={details.title}
    class='absolute inset-0 h-full w-full object-cover'
  />
  <div class='absolute inset-0 bg-gradient-to-b from-black/80 to-black/50'>
  </div>

  <div
    class='absolute inset-0 flex items-center justify-start px-6 md:px-10 pb-8 md:pb-0'
  >
    <div class='text-left'>
      <h1 class='text-3xl md:text-5xl font-extrabold text-white mb-3'>
        {details.title}
      </h1>
      <p class='text-lg md:text-xl text-white leading-relaxed'>
        {details.desc}
      </p>
    </div>
  </div>
</section>
