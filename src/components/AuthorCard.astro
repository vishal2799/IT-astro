---
import { Image } from 'astro:assets';

interface Author {
  name: string;
  bio: string;
  avatar: string;
}

interface Props {
  author: Author;
}

const { author } = Astro.props;
---

<div class='flex items-center space-x-4 bg-white rounded-lg shadow-md p-6'>
  <Image
    src={author.avatar}
    alt={author.name}
    width={80}
    height={80}
    class='rounded-full'
  />
  <div>
    <h3 class='text-xl font-semibold mb-2'>{author.name}</h3>
    <p class='text-gray-600'>{author.bio}</p>
  </div>
</div>
