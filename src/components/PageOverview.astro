---
import { Icon } from 'astro-icon/components';

// Props Deconstruction
const { overview } = Astro.props;
---

<div class='flex flex-col md:flex-row gap-10 lg:gap-16 px-6'>
  <!-- Left Column -->
  <div class='flex flex-col gap-5 flex-1'>
    <h3 class='text-2xl sm:text-3xl font-semibold text-textPrimary'>
      {overview.leftTitle}
    </h3>
    <p class='text-sm sm:text-base text-textSecondary leading-relaxed'>
      {overview.leftDescription}
    </p>
  </div>

  <!-- Right Column -->
  <div class='flex flex-col gap-5 flex-1'>
    <h3 class='text-2xl sm:text-3xl font-semibold text-textPrimary'>
      {overview.rightTitle}
    </h3>
    <div class='flex flex-col gap-3'>
      {
        overview.rightPoints.map((point: unknown, index: any) => (
          <div class='flex items-center gap-3'>
            <Icon name='check2-circle' size={30} class='text-accent' />
            <span class='font-medium text-textSecondary'>{point}</span>
          </div>
        ))
      }
    </div>
  </div>
</div>
