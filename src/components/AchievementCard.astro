---
import { Icon } from 'astro-icon/components';

interface Props {
  title: string;
  value: string;
  icon: string;
}

const { title, value, icon } = Astro.props;
---

<div
  class='bg-white rounded-lg shadow-md p-6 text-center transition-all duration-300 hover:shadow-xl'
>
  <Icon name={icon} class='w-12 h-12 text-primary mx-auto mb-4' />
  <h3 class='text-2xl font-bold text-gray-900 mb-2'>{value}</h3>
  <p class='text-gray-600'>{title}</p>
</div>
