---
import { Icon } from 'astro-icon/components';

const currentYear = new Date().getFullYear();

const sections = [
  {
    title: 'Services',
    links: [
      {
        href: '/services/business-process-automation/',
        label: 'Business Process Automation',
      },
      {
        href: '/services/digital-transformation/',
        label: 'Digital Transformation',
      },
      {
        href: '/services/business-consultancy/',
        label: 'Process Automation Consultancy',
      },
      {
        href: '/services/robotic-process-automation-rpa/',
        label: 'Robotic Process Automation (RPA)',
      },
      {
        href: '/services/low-code-automation/',
        label: 'Low-Code Automation (BPM)',
      },
      {
        href: '/services/artificial-intelligence-automation/',
        label: 'AI Automation',
      },
      { href: '/services/process-mining/', label: 'Process Mining' },
    ],
  },
  {
    title: 'Technology',
    links: [
      { href: '/technology/uipath/', label: 'UiPath' },
      { href: '/technology/mendix/', label: 'Mendix' },
      { href: '/technology/netcall/', label: 'Netcall' },
      { href: '/technology/nintex/', label: 'Nintex' },
      { href: '/technology/k2/', label: 'K2' },
    ],
  },
  {
    title: 'Solutions',
    links: [
      { href: '/solutions/finance/', label: 'Finance Automation' },
      { href: '/solutions/operations/', label: 'Operations Automation' },
      { href: '/solutions/human-resources/', label: 'HR Automation' },
      {
        href: '/solutions/sales-marketing/',
        label: 'Sales & Marketing Automation',
      },
      { href: '/solutions/information-technology/', label: 'IT Automation' },
    ],
  },
  {
    title: 'Company',
    links: [
      { href: '/about-us/', label: 'About Us' },
      {
        href: '/about-us/intelligent-automation-alliance/',
        label: 'Innovation',
      },
      { href: '/knowledge-hub/', label: 'Knowledge Hub' },
      { href: '/case-studies/', label: 'Case Studies' },
      { href: '/about-us/careers/', label: 'Careers' },
    ],
  },
];

const socialLinks = [
  {
    href: 'https://www.linkedin.com/company/1895026/',
    icon: 'instagram',
    label: 'LinkedIn',
  },
  {
    href: 'https://twitter.com/Velocity_IT',
    icon: 'twitter-x',
    label: 'Twitter',
  },
  {
    href: 'https://www.facebook.com/VelocityProcessAutomation/',
    icon: 'facebook',
    label: 'Facebook',
  },
];
---

<footer class='bg-white text-gray-800 py-12 px-4 sm:px-6 lg:px-8'>
  <div class='max-w-7xl mx-auto'>
    <div class='grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-5 gap-8 mb-12'>
      <div class='space-y-4'>
        <h2 class='text-2xl font-bold text-primary'>Contact Us</h2>
        <address class='text-sm not-italic space-y-2'>
          <p>
            2nd Floor,<br />100 Avebury Boulevard,<br />Milton Keynes,<br />MK9
            1FH
          </p>
          <p>
            <a
              href='tel:+441908738254'
              class='text-accent hover:text-primary transition-colors duration-300'
            >
              +44(0) 1908 738 254
            </a>
          </p>
          <p>
            <a
              href='mailto:contact-uk@velocity-it.com'
              class='text-accent hover:text-primary transition-colors duration-300'
            >
              contact@alicornsolutions.com
            </a>
          </p>
        </address>
      </div>

      {
        sections.map((section) => (
          <div class='space-y-4'>
            <h2 class='text-2xl font-bold text-primary'>{section.title}</h2>
            <ul class='space-y-2'>
              {section.links.map((link) => (
                <li>
                  <a
                    href={link.href}
                    class='text-highlight hover:text-accent transition-colors duration-300'
                  >
                    {link.label}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>

    <div
      class='flex flex-col lg:flex-row justify-between items-center mb-12 space-y-6 lg:space-y-0'
    >
      <form method='get' action='/' class='w-full lg:w-1/2'>
        <div class='relative'>
          <label for='search' class='sr-only'>Search this site</label>
          <input
            type='text'
            id='search'
            name='s'
            placeholder='Search'
            class='w-full px-4 py-2 rounded-full border-2 border-accent bg-highlight text-textPrimary placeholder-textPrimary/50 focus:outline-none focus:ring-2 focus:ring-primary transition-shadow duration-300'
          />
          <button
            type='submit'
            class='absolute right-3 top-1/2 transform -translate-y-1/2 text-accent hover:text-primary transition-colors duration-300'
          >
            <Icon name='search' class='w-5 h-5' />
            <span class='sr-only'>Submit search</span>
          </button>
        </div>
      </form>

      <ul class='flex space-x-6'>
        {
          socialLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class='text-highlight hover:text-accent transition-colors duration-300'
                aria-label={link.label}
              >
                <Icon name={link.icon} size={28} />
              </a>
            </li>
          ))
        }
      </ul>
    </div>

    <!-- <div class='flex flex-wrap justify-center items-center gap-8 mb-8'>
      <img
        src='https://www.velocity-it.com/wp-content/uploads/2020/10/g-cloud-supplier-e1602163302138.png'
        alt='G Cloud Supplier'
        width='120'
        height='60'
        loading='lazy'
        class='h-14 w-auto object-contain'
      />
      <img
        src='https://www.velocity-it.com/wp-content/uploads/2020/10/STC_Member-Logo_CMYK-e1602163254108.png'
        alt='STC Member'
        width='120'
        height='60'
        loading='lazy'
        class='h-14 w-auto object-contain'
      />
    </div> -->

    <div class='text-center text-sm'>
      <p>&copy; {currentYear} Alicorn Solutions</p>
    </div>
  </div>
</footer>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  footer {
    animation: fadeIn 0.5s ease-out;
  }

  @media (prefers-reduced-motion: reduce) {
    footer {
      animation: none;
    }
  }
</style>
