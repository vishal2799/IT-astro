---
import { Icon } from 'astro-icon/components';
import { services, solutions, technology } from '../constants';

const currentYear = new Date().getFullYear();

const serviceLinks = services.map((service) => ({
  label: service.title,
  href: `/services/${service.title.toLowerCase().replace(/\s+/g, '-')}`,
}));

const techLinks = technology.map((tech) => ({
  label: tech.name,
  href: `/technology/${tech.name.toLowerCase().replace(/\s+/g, '-')}`,
}));

const solLinks = solutions.map((sol) => ({
  label: sol.name,
  href: `/solutions/${sol.name.toLowerCase().replace(/\s+/g, '-')}`,
}));

const sections = [
  {
    title: 'Services',
    links: serviceLinks,
  },
  {
    title: 'Technology',
    links: techLinks,
  },
  {
    title: 'Solutions',
    links: solLinks,
  },
  {
    title: 'Company',
    links: [
      { href: '/about-us', label: 'About Us' },
      { href: '/contact-us', label: 'Contact Us' },
      { href: '/blog', label: 'Blog' },
      { href: '/projects', label: 'Projects' },
    ],
  },
];

const socialLinks = [
  {
    href: 'https://www.linkedin.com/company/1895026/',
    icon: 'instagram',
    label: 'LinkedIn',
  },
  {
    href: 'https://twitter.com/Velocity_IT',
    icon: 'twitter-x',
    label: 'Twitter',
  },
  {
    href: 'https://www.facebook.com/VelocityProcessAutomation/',
    icon: 'facebook',
    label: 'Facebook',
  },
];
