---
import { Icon } from 'astro-icon/components';

interface Props {
  address: string;
  email: string;
  phone: string;
  socialMedia: {
    name: string;
    url: string;
    icon: string;
  }[];
}

const { address, email, phone, socialMedia } = Astro.props;
---

<div class='bg-white rounded-lg shadow-md p-8 h-full'>
  <h2 class='text-2xl font-bold mb-6 text-gray-900'>Contact Information</h2>

  <div class='space-y-6'>
    <!-- Address Section -->
    <div class='flex items-start'>
      <Icon
        name='geo-alt'
        class='text-primary w-6 h-6 flex-shrink-0 mr-4'
        aria-hidden='true'
      />
      <p class='text-sm text-gray-700 break-words'>{address}</p>
    </div>

    <!-- Email Section -->
    <div class='flex items-start'>
      <Icon
        name='envelope'
        class='w-6 h-6 text-primary flex-shrink-0 mr-4'
        aria-hidden='true'
      />
      <a
        href={`mailto:${email}`}
        class='text-gray-700 transition duration-300 hover:text-primary'
        aria-label={`Email us at ${email}`}
      >
        {email}
      </a>
    </div>

    <!-- Phone Section -->
    <div class='flex items-start'>
      <Icon
        name='phone'
        class='w-6 h-6 text-primary flex-shrink-0 mr-4'
        aria-hidden='true'
      />
      <a
        href={`tel:${phone}`}
        class='text-gray-700 transition duration-300 hover:text-primary'
        aria-label={`Call us at ${phone}`}
      >
        {phone}
      </a>
    </div>
  </div>

  <!-- Social Media Section -->
  <div class='mt-8 pt-6 border-t border-gray-200'>
    <h3 class='text-xl font-semibold mb-4 text-gray-900'>Follow Us</h3>
    <div class='flex space-x-4'>
      {
        socialMedia.map((platform) => (
          <a
            href={platform.url}
            target='_blank'
            rel='noopener noreferrer'
            class='text-gray-600 hover:text-primary transition duration-300'
            aria-label={`Visit our ${platform.name} profile`}
          >
            <Icon name={platform.icon} class='w-6 h-6' aria-hidden='true' />
          </a>
        ))
      }
    </div>
  </div>
</div>
