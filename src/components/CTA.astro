---
const { title, description, buttonText, buttonLink } = Astro.props;
---

<section class="section-padding px-4 bg-primary text-white">
  <div class="container mx-auto max-w-3xl text-center">
    <!-- Title -->
    <h2
      class="text-3xl md:text-4xl font-bold mb-6"
      data-aos="fade-up"
    >
      {title}
    </h2>

    <!-- Description -->
    <p
      class="text-lg md:text-xl text-primary-100 mb-8"
      data-aos="fade-up"
      data-aos-delay="150"
    >
      {description}
    </p>

    <!-- Call-to-Action Button -->
    <a
      href={buttonLink}
      class="inline-block bg-white text-primary font-semibold hover:bg-primary-100 hover:text-primary-700 py-3 px-8 rounded-full transition duration-300 text-lg focus:outline-none focus:ring-4 focus:ring-white/40"
      aria-label={`Learn more about ${title}`}
      data-aos="zoom-in"
      data-aos-delay="300"
    >
      {buttonText}
    </a>
  </div>
</section>
