<section class='py-7 px-5 text-center bg-primary'>
  <div class='flex flex-col lg:flex-row justify-between max-w-5xl mx-auto'>
    <div class='p-6'>
      <h3
        id='stat-1'
        class='text-6xl font-bold text-highlight mb-2'
        data-target='50'
        data-suffix='+'
      >
        0
      </h3>
      <p class='text-lg font-medium text-highlight'>Projects Completed</p>
    </div>
    <div class='w-[1px] py-6 bg-highlight hidden lg:block'></div>
    <div class='p-6'>
      <h3
        id='stat-2'
        class='text-6xl font-bold text-highlight mb-2'
        data-target='5'
        data-suffix='+'
      >
        0
      </h3>
      <p class='text-lg font-medium text-highlight'>Years of Experience</p>
    </div>
    <div class='w-[1px] py-6 bg-highlight hidden lg:block'></div>
    <div class='p-6'>
      <h3
        id='stat-3'
        class='text-6xl font-bold text-highlight mb-2'
        data-target='15'
        data-suffix='+'
      >
        0
      </h3>
      <p class='text-lg font-medium text-highlight'>Different Domains</p>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const counters = document.querySelectorAll('h3[data-target]');

    counters.forEach((counter: any) => {
      const target = +counter.getAttribute('data-target');
      const suffix = counter.getAttribute('data-suffix') || '';
      const speed = 50; // Lower number = faster animation

      const updateCount = () => {
        const current = +counter.innerText;

        // Calculate increment
        const increment = Math.ceil(target / 100);

        if (current < target) {
          counter.innerText = current + increment;
          setTimeout(updateCount, speed);
        } else {
          counter.innerText = target + suffix; // Add suffix after completion
        }
      };

      updateCount();
    });
  });
</script>
