---
import BlogCard from '../../components/BlogCard.astro';
import BlogCard2 from '../../components/BlogCard2.astro';
import { Blogs } from '../../constants';
---

<section class='pb-12 md:pb-14'>
  <div class='container mx-auto px-4'>
    <div class='max-w-screen-md mx-auto text-center mb-10'>
      <div class='mb-6 flex items-center gap-4 justify-center'>
        <div class='h-[1px] w-12 bg-accent'></div>
        <div class='text-accent text-lg'>Blog And Articles</div>
      </div>
      <h1
        class='text-4xl sm:text-5xl md:text-6xl font-medium tracking-tight text-primary mb-6'
      >
        Explore Our Blogs & Articles
      </h1>
      <p class='text-lg sm:text-xl text-textPrimary leading-relaxed mb-10'>
        Discover the blog & article practices that make our agency a champion of
        diversity and equality.
      </p>
    </div>
    <div class='grid md:grid-cols-2 lg:grid-cols-3 gap-8 mt-12'>
      {Blogs.slice(0, 3).map((blog) => <BlogCard2 />)}
    </div>
  </div>
</section>
