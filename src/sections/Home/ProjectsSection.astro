---
import { Icon } from 'astro-icon/components';
import ProjectCard from '../../components/ProjectCard.astro';
import { Projects } from '../../constants';
---

<section class='py-16 sm:py-20'>
  <div class='container mx-auto px-4'>
    <div
      class='flex flex-col gap-8 sm:flex-row sm:justify-between sm:items-end mb-12'
    >
      <div class='space-y-4'>
        <div class='flex items-center gap-4'>
          <div class='h-[2px] w-12 bg-accent'></div>
          <span class='text-accent font-semibold tracking-wide uppercase'
            >Projects</span
          >
        </div>
        <h2
          class='text-3xl sm:text-4xl lg:text-5xl font-bold text-primary leading-tight'
        >
          Some of Our Creative Works
        </h2>
      </div>
      <a
        href='#'
        class='inline-flex items-center justify-center px-6 py-3 text-lg font-medium text-primary bg-highlight rounded-full transition-colors duration-300 hover:bg-accent hover:text-highlight group'
      >
        <span class='mr-2 text-nowrap'>Explore More</span>
        <Icon
          name='arrow-right'
          class='w-5 h-5 transition-transform duration-300 group-hover:translate-x-1'
        />
      </a>
    </div>
    <div class='grid md:grid-cols-2 gap-8'>
      {
        Projects.slice(0, 4).map((project: any) => (
          <ProjectCard project={project} />
        ))
      }
    </div>
  </div>
</section>
