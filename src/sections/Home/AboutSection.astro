---
import { Image } from 'astro:assets';
import AboutImg from '../../assets/images/About.jpg';
import { Icon } from 'astro-icon/components';
---

<div class='flex flex-col lg:flex-row gap-20 items-center'>
  <Image
    src={AboutImg}
    alt='about section image'
    class='h-[400px] md:h-[600px] object-cover'
  />
  <div>
    <div class='mb-6 flex items-center gap-4'>
      <div class='h-[1px] w-12 bg-accent'></div>
      <div class='text-accent text-lg'>About Us</div>
    </div>
    <h1
      class='text-4xl sm:text-5xl md:text-6xl font-medium tracking-tight text-primary mb-6'
    >
      Why Work With Us And How We Work?
    </h1>
    <p class='text-lg sm:text-xl text-textPrimary leading-relaxed mb-10'>
      Marketing online presence and overall in the digital world to make awesome
      strategies for startup businesses.
    </p>
    <div class='flex flex-col gap-3'>
      {
        [1, 2, 3, 4].map((point: unknown, index: any) => (
          <div class='flex items-center gap-3'>
            <div class='bg-highlight p-1 rounded-full'>
              <Icon name='check' size={24} class='text-primary' />
            </div>
            <span class='text-lg font-normal text-textPrimary'>
              Fast and easy to help your brand.
            </span>
          </div>
        ))
      }
    </div>
  </div>
</div>
