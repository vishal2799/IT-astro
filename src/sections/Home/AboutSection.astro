---
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon/components';
import AboutImg from '../../assets/images/About.jpg';

const points = [
  'Fast and easy to help your brand',
  'Innovative solutions for digital marketing',
  'Experienced team of professionals',
  'Data-driven strategies for optimal results',
];
---

<section class='py-16 px-4 sm:px-6 lg:px-8 bg-white'>
  <div class='max-w-7xl mx-auto'>
    <div class='grid lg:grid-cols-2 gap-12 lg:gap-20 items-center'>
      <div
        class='relative h-[350px] sm:h-[450px] lg:h-[550px] rounded-lg overflow-hidden shadow-xl'
      >
        <Image
          src={AboutImg}
          alt='About our company'
          class='w-full h-full object-cover'
          widths={[400, 800, 1200]}
          sizes='(max-width: 1024px) 100vw, 50vw'
          loading='eager'
        />
      </div>
      <div class='space-y-8'>
        <div class='flex items-center gap-4'>
          <div class='h-[2px] w-12 bg-accent'></div>
          <span class='text-accent font-semibold tracking-wide uppercase'
            >About Us</span
          >
        </div>
        <h2
          class='text-3xl sm:text-4xl lg:text-5xl font-bold text-primary leading-tight'
        >
          Why Work With Us And How We Work?
        </h2>
        <p class='text-lg sm:text-xl text-gray-700 leading-relaxed'>
          We enhance your online presence and develop comprehensive digital
          strategies to propel startup businesses to success in the
          ever-evolving digital landscape.
        </p>
        <ul class='space-y-4'>
          {
            points.map((point) => (
              <li class='flex items-center gap-3'>
                <div class='bg-highlight p-1.5 rounded-full'>
                  <Icon name='check' class='w-5 h-5 text-primary' />
                </div>
                <span class='text-lg text-gray-700'>{point}</span>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </div>
</section>
