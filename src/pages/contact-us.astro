---
import { Image } from 'astro:assets';
import MainLayout from '../layouts/MainLayout.astro';
import ContactForm from '../components/ContactForm.astro';
import ContactInfo from '../components/ContactInfo.astro';
import CTA from '../components/CTA.astro';

const contactInfo = {
  address: '123 Tech Street, Silicon Valley, CA 94000',
  email: 'info@alicornsolutions.com',
  phone: '+1 (555) 123-4567',
  socialMedia: [
    { name: 'Twitter', url: 'https://twitter.com/technova', icon: 'twitter-x' },
    {
      name: 'LinkedIn',
      url: 'https://linkedin.com/company/technova',
      icon: 'instagram',
    },
    {
      name: 'Facebook',
      url: 'https://facebook.com/technova',
      icon: 'facebook',
    },
  ],
};
---

<MainLayout
  title='Contact Us | Alicorn Solutions'
  description='Get in touch with Alicorn Solutions for innovative solutions to drive your business forward.'
>
  <main class='bg-gradient-to-b from-gray-100 to-white'>
    <!-- Hero Section -->
    <section
      class='relative h-[40vh] min-h-[300px] flex items-center justify-center'
    >
      <Image
        src='/breadcrumb1.jpg'
        alt='Contact TechNova'
        width={1920}
        height={1080}
        class='absolute inset-0 w-full h-full object-cover'
      />
      <div class='absolute inset-0 bg-primary opacity-70'></div>
      <div class='relative z-10 text-center text-white px-4'>
        <h1 class='text-4xl md:text-6xl font-bold mb-4'>Contact Us</h1>
        <p class='text-xl md:text-2xl mb-8'>
          Let's discuss how we can help your business succeed
        </p>
      </div>
    </section>

    <!-- Contact Section -->
    <section class='section-padding px-4'>
      <div class='container mx-auto max-w-6xl'>
        <div class='flex flex-col md:flex-row gap-12'>
          <div class='md:w-2/3'>
            <ContactForm />
          </div>
          <div class='md:w-1/3'>
            <ContactInfo {...contactInfo} />
          </div>
        </div>
      </div>
    </section>

    <!-- Map Section -->
    <section class='section-padding px-4 bg-gray-50'>
      <div class='container mx-auto max-w-6xl'>
        <h2 class='text-3xl font-bold text-center mb-12 text-gray-900'>
          Our Location
        </h2>
        <div class='aspect-w-16 aspect-h-9'>
          <iframe
            src='https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3168.639290621062!2d-122.08624618469387!3d37.42199997982362!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x808fba02425dad8f%3A0x6c296c66619367e0!2sGoogleplex!5e0!3m2!1sen!2sus!4v1624308992840!5m2!1sen!2sus'
            width='100%'
            height='100%'
            style='border:0;'
            allowfullscreen=''
            loading='lazy'></iframe>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <CTA
      title='Ready to Get Started?'
      description='Our team of experts is here to help you navigate the complex world of IT and drive your business forward.'
      buttonText='Schedule a Consultation'
      buttonLink='#contact-form'
    />
  </main>
</MainLayout>
