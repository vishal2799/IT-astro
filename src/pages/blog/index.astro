];

// Pagination
const postsPerPage = 5;
const currentPage = 1; // In a real app, this would be determined by the URL or query parameter
const totalPages = Math.ceil(allPosts.length / postsPerPage);
const paginatedPosts = allPosts.slice(0, postsPerPage);
---

<MainLayout
  title='Alicorn Blog - Latest Insights and Tech Trends'
  description='Stay updated with the latest in technology, cloud computing, cybersecurity, and more on the TechNova blog.'
>
  <main class='bg-primary-50 min-h-screen'>
    <!-- Hero Section -->
    <section class='relative py-20 px-4'>
      <div
        class='absolute inset-0 bg-gradient-to-r from-primary to-secondary-500 opacity-90'
      >
      </div>
      <div
        class='relative z-10 container mx-auto max-w-4xl text-center text-white'
      >
        <h1 class='text-4xl md:text-5xl font-bold mb-6'>Alicorn Blog</h1>
        <p class='text-xl md:text-2xl mb-8'>
          Stay updated with the latest insights and trends in technology
        </p>
      </div>
    </section>

    <!-- Blog Posts -->
    <section class='section-padding px-4'>
      <div class='container mx-auto max-w-6xl'>
        <div class='grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8'>
          {
            paginatedPosts.map((post) => (
              <BlogPostCard
                title={post.title}
                excerpt={post.excerpt}
                image={post.image}
                date={post.date}
                author={post.author}
                slug={post.slug}
              />
            ))
          }
        </div>

        <!-- Pagination -->
        <!-- <div class="mt-12">
          <Pagination currentPage={currentPage} totalPages={totalPages} />
        </div> -->
      </div>
    </section>
  </main>
</MainLayout>
