      <div
        class='relative z-10 container mx-auto max-w-4xl text-center text-white'
      >
        <h1 class='text-4xl md:text-5xl font-bold mb-6'>{post.title}</h1>
        <p class='text-xl mb-4'>{post.date} | {post.category}</p>
