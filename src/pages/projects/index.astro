---
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import CTAOne from '../../components/CTAOne.astro';
import PageIntro from '../../components/PageIntro.astro';
import ProjectCard from '../../components/ProjectCard.astro';
import { Projects } from '../../constants';
import Layout from '../../layouts/Layout.astro';
import BreadcrumbImg from '../../assets/images/breadcrumbsolution.jpg';

const breadCrumbsDetails = {
  img: BreadcrumbImg,
  title: 'Projects',
  desc: 'Delivering success to corporations worldwide.',
};
---

<Layout>
  <div class='min-h-screen bg-gradient-to-b from-white to-highlight'>
    <Breadcrumbs details={breadCrumbsDetails} />
    <div class='container mx-auto px-4 py-12 md:py-24'>
      <PageIntro
        heading='Explore Our Recent Projects'
        paragraph='Explore the stories behind each project, uncovering challenges, strategies, and remarkable results.'
      />

      <div class='grid md:grid-cols-2 gap-8 mt-12 mb-10'>
        {Projects.map((project) => <ProjectCard project={project} />)}
      </div>

      <CTAOne />
    </div>
  </div>
</Layout>
