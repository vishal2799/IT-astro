---
import MainLayout from '../../layouts/MainLayout.astro';
import ProjectCard from '../../components/ProjectCard.astro';

const projects = [
  {
    title: 'Global E-commerce Platform Overhaul',
    category: 'E-commerce',
    description:
      'Redesigned and optimized a major e-commerce platform, resulting in a 40% increase in conversion rates and improved user experience.',
    image: '/service21.jpg',
    client: 'MegaShop Inc.',
    duration: '8 months',
    technologies: ['React', 'Node.js', 'MongoDB', 'AWS'],
    slug: 'global-ecommerce-platform-overhaul',
  },
  {
    title: 'AI-Powered Financial Forecasting Tool',
    category: 'FinTech',
    description:
      'Developed an AI-driven financial forecasting tool that increased prediction accuracy by 30% for a leading investment firm.',
    image: '/service21.jpg',
    client: 'InvestSmart LLC',
    duration: '6 months',
    technologies: ['Python', 'TensorFlow', 'AWS', 'React'],
    slug: 'ai-powered-financial-forecasting-tool',
  },
  {
    title: 'Smart City Infrastructure Management System',
    category: 'IoT',
    description:
      'Created a comprehensive IoT solution for managing city infrastructure, reducing operational costs by 25% and improving resource allocation.',
    image: '/service21.jpg',
    client: 'MetropolisTech',
    duration: '12 months',
    technologies: [
      'IoT Sensors',
      'Cloud Computing',
      'Big Data Analytics',
      'Mobile App',
    ],
    slug: 'smart-city-infrastructure-management-system',
  },
  {
    title: 'Blockchain-based Supply Chain Tracking',
    category: 'Blockchain',
    description:
      'Implemented a blockchain solution for supply chain tracking, enhancing transparency and reducing fraud by 60% for a global logistics company.',
    image: '/service21.jpg',
    client: 'GlobalLogistics Co.',
    duration: '10 months',
    technologies: ['Hyperledger Fabric', 'Node.js', 'React', 'IBM Cloud'],
    slug: 'blockchain-based-supply-chain-tracking',
  },
];
---

<MainLayout
  title='Our Projects | TechNova IT Services'
  description='Explore our portfolio of successful projects across various industries and technologies.'
>
  <main class='bg-gradient-to-b from-gray-100 to-white'>
    <!-- Hero Section -->
    <section
      class='relative h-[40vh] min-h-[300px] flex items-center justify-center'
    >
      <!-- <Image
        src='/service21.jpg'
        alt='TechNova Projects'
        width={1920}
        height={1080}
        class='absolute inset-0 w-full h-full object-cover'
      /> -->
      <img
        src='/service21.jpg'
        alt='TechNova Projects'
        class='absolute inset-0 w-full h-full object-cover'
      />
      <div class='absolute inset-0 bg-black opacity-50'></div>
      <div class='relative z-10 text-center text-white px-4'>
        <h1 class='text-4xl md:text-6xl font-bold mb-4'>Our Projects</h1>
        <p class='text-xl md:text-2xl mb-8'>
          Innovative Solutions Driving Business Success
        </p>
      </div>
    </section>

    <!-- Projects Grid -->
    <section class='py-20 px-4'>
      <div class='container mx-auto max-w-6xl'>
        <div class='grid grid-cols-1 md:grid-cols-2 gap-12'>
          {
            projects.map((project) => (
              <ProjectCard
                title={project.title}
                category={project.category}
                description={project.description}
                image={project.image}
                client={project.client}
                duration={project.duration}
                technologies={project.technologies}
                slug={project.slug}
              />
            ))
          }
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class='py-20 px-4 bg-primary text-white'>
      <div class='container mx-auto max-w-3xl text-center'>
        <h2 class='text-3xl md:text-4xl font-bold mb-6'>
          Ready to Start Your Project?
        </h2>
        <p class='text-xl text-primary-100 mb-8'>
          Let's discuss how we can bring your ideas to life and drive your
          business forward.
        </p>
        <a
          href='/contact'
          class='inline-block bg-white text-primary font-bold py-3 px-8 rounded-full hover:bg-gray-100 transition duration-300 text-lg'
        >
          Get in Touch
        </a>
      </div>
    </section>
  </main>
</MainLayout>
