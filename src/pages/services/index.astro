---
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import ServiceCard from '../../components/ServiceCard.astro';
import { Services } from '../../constants';
import Layout from '../../layouts/Layout.astro';
---

<Layout>
  <div class='min-h-screen bg-gradient-to-b from-white-100 to-primary-100'>
    <div class='container mx-auto px-4 py-8'>
      <Breadcrumbs items={[{ label: 'Destinations', href: '/destinations' }]} />

      <div class='mb-12 mt-8 text-center'>
        <h1
          class='text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight text-primary mb-4'
        >
          Our Services
        </h1>
        <p class='text-xl text-darkText'>
          Explore our variety of Services across various domains.
        </p>
      </div>

      <div class='grid md:grid-cols-2 lg:grid-cols-3 gap-8'>
        {Services.map((service) => <ServiceCard service={service} />)}
      </div>
    </div>
  </div>
</Layout>
