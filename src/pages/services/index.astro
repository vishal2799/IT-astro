---
import ServiceCard from '../../components/ServiceCard.astro';
import { Services } from '../../constants';
import Layout from '../../layouts/Layout.astro';
---

<Layout>
  <div class='min-h-screen bg-gradient-to-b from-white to-lightGray'>
    <div class='container mx-auto px-4 py-8'>
      <div class='mb-16 mt-8 px-4 text-center'>
        <h1
          class='text-4xl sm:text-5xl md:text-6xl font-bold tracking-tight text-primary mb-4 transition-transform duration-500 ease-in-out transform hover:scale-105'
        >
          Explore Our Services
        </h1>
        <p class='text-lg sm:text-xl text-darkText leading-relaxed'>
          We offer features and services for businesses and individuals with
          your unique needs in mind.
        </p>
      </div>

      <div class='grid md:grid-cols-2 lg:grid-cols-3 gap-8'>
        {Services.map((service) => <ServiceCard service={service} />)}
      </div>
    </div>
  </div>
</Layout>
