---
import ServiceCard2 from '../components/ServiceCard2.astro';
import Layout from '../layouts/Layout.astro';
import { ServicesTwo } from '../constants';
import { Icon } from 'astro-icon/components';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import BreadcrumbImg from '../assets/images/breadcrumbservice.jpg';
import PageOverview from '../components/PageOverview.astro';

const breadCrumbsDetails = {
  img: BreadcrumbImg,
  title: 'Our Services',
  desc: 'Your Process Automation Partner from beginning to end.',
};

const overview = {
  leftTitle: 'Redefine whatâ€™s possible across your enterprise',
  leftDescription:
    'Solve productivity challenges in any department and free teams from wasting hours on tedious, time-consuming tasks. With fast, agile automation, you can step up efficiency, reduce risk, and power lasting change in any function or process. Whether you need to scale up output or support a more distributed workforce, we are here to help.',
  rightTitle: 'Why automate with us?',
  rightPoints: [
    'Finance',
    'Operations',
    'Human Resources',
    'Sales & Marketing',
    'Information Technology',
  ],
};
---

<Layout>
  <div class='min-h-screen bg-gradient-to-b from-white to-lightGray'>
    {/* Breadcrumb */}
    <Breadcrumbs details={breadCrumbsDetails} />

    <div class='container mx-auto px-4 py-16'>
      <PageOverview overview={overview} />

      <div class='grid gap-10 mt-20'>
        {
          ServicesTwo.map((service, index) => (
            <ServiceCard2 service={service} index={index} />
          ))
        }
      </div>
    </div>
  </div>
</Layout>
